<div id="latest-heading">
  <h3>
    <div class="redline"></div>
    {{ heading_title }}
    <div class="redline"></div>
  </h3>
</div>
<div id="latest-section" class="row">
  {% set product1 = products[0] %}
  {% set product2 = products[1] %}
  {% set product3 = products[2] %}
  {% set product4 = products[3] %}

  <!-- LEFT SECTION -->
  <section class="col-sm-12 col-md-7">
    <section class="col-md-12 latest-zone">
      <div class="latest-overlay">
        <div class="overlay-content">
          <p class="lead">{{product1.name}}</p>
          <p>{{product1.description}}</p>
          <a class="btn btn-primary" href="{{ product1.href }}">{{btn_see_text}}</a>
        </div>
      </div>
      <div class="window">
       <img src="{{ product1.thumb }}" alt="{{ product1.name }}" title="{{ product1.name }}" class="img-responsive" />
      </div>
    </section>
    <div>
      <section class="col-sm-6 latest-zone">
         <div class="latest-overlay">
          <div class="overlay-content">
            <p class="lead">{{product3.name}}</p>
            <p>{{product3.description}}</p>
            <a class="btn btn-primary" href="{{ product3.href }}">{{btn_see_text}}</a>
          </div>
        </div>
        <div class="window">
          <img src="{{ product3.thumb }}" alt="{{ product3.name }}" title="{{ product3.name }}" class="img-responsive" />
        </div>
      </section>
      <section class="col-sm-6 latest-zone">
        <div class="latest-overlay">
          <div class="overlay-content">
            <p class="lead">{{product4.name}}</p>
            <p>{{product4.description}}</p>
            <a class="btn btn-primary" href="{{ product4.href }}">{{btn_see_text}}</a>
          </div>
        </div>
        <div class="window">
          <img src="{{ product4.thumb }}" alt="{{ product4.name }}" title="{{ product4.name }}" class="img-responsive" />
        </div>
      </section>
    </div>
  </section>

  <!-- RIGHT SECTION -->
  <section class="col-sm-12 col-md-5 latest-zone">
    <section class="latest-zone">
      <div class="latest-overlay">
        <div class="overlay-content">
          <p class="lead">{{product2.name}}</p>
          <p>{{product2.description}}</p>
          <a class="btn btn-primary" href="{{ product2.href }}">{{btn_see_text}}</a>
        </div>
      </div>
      <div class="window">
        <img src="{{ product2.thumb }}" alt="{{ product2.name }}" title="{{ product2.name }}" class="img-responsive" />
      </div>
    </section>
  </section>

